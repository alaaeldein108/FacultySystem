@model DepartmentViewModel
@{
    ViewData["Title"] = "Update";
}
<h1>Department Details</h1>

<div>
    <div class="row">
        <form asp-controller="Department" asp-action="Update">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="@Model.Id" class="col-form-label"></label>
                    <input asp-for="@Model.Id" class="form-control" readonly />
                </div>
                
                <div class="form-group">
                    <label asp-for="@Model.Code" class="col-form-label"></label>
                    <input asp-for="@Model.Code" class="form-control" value="">
                    <span asp-validation-for="@Model.Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Name" class="col-form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" value="">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
        
    </div>
   
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}