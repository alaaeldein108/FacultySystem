@model EmployeeViewModel
@{
    ViewData["Title"] = "Update";
    var Departments = new SelectList(ViewBag.Departments, "Id","Name");
}
<h1>Employee Details</h1>

<div>
    <div class="row">
        <form asp-controller="Employee" asp-action="Update" enctype="multipart/form-data">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="@Model.Id" class="col-form-label"></label>
                    <input asp-for="@Model.Id" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Name" class="col-form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" value="">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Address" class="col-form-label"></label>
                    <input asp-for="@Model.Address" class="form-control" value="">
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Salary" class="col-form-label"></label>
                    <input asp-for="@Model.Salary" class="form-control" value="">
                    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Email" class="col-form-label"></label>
                    <input asp-for="@Model.Email" class="form-control" value="">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.HiringDate" class="col-form-label"></label>
                    <input asp-for="@Model.HiringDate" class="form-control" value="">
                    <span asp-validation-for="@Model.HiringDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.DepartmentId" class="col-form-label"></label></br>
                    <select asp-for="@Model.DepartmentId" asp-items="Departments" class="col-form-label">
                        <option>---  Select Department  ---</option>
                    </select>
                    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Image" class="col-form-label"> </label>
                    <input type="file" asp-for="@Model.Image" class="form-control">
                </div>
                <div class="form-group form-check">
                    <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox">
                    <label asp-for="@Model.IsActive" class="form-check-label"></label>

                </div>
            </div>
            
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
        </form>

    </div>
    
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}