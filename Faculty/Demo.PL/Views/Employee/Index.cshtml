@using Demo.DAL.Entities

@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary"> Create New Employee</a>
<br />
<br />
<form class="my-3" asp-controller="Employee" asp-action="Index">
    <div class="row">
        <div class="col-sw-8">
            <input placeholder="Search..." name="SearchValue" class="form-control"/>
        </div>
        <div>
            <input type="submit" value="search" class="btn btn-success btn-block" />
        </div>
    </div>
   
</form>
@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Image)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.Address)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
                <th>@Html.DisplayNameFor(x => x.Salary)</th>
                <th>@Html.DisplayNameFor(x => x.HiringDate)</th>
                <th>@Html.DisplayNameFor(x => x.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@item.ImageUrl" class="img-circle" height="40" width="40" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>
                    <td>@item.HiringDate.Day-@item.HiringDate.Month-@item.HiringDate.Year</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a class="btn btn-success" asp-asp-controller="Department" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-asp-controller="Department" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <H3>No Employees Found!!</H3>
    </div>
}



