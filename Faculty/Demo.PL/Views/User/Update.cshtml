@model ApplicationUser
@{
    ViewData["Title"] = "Update";
}
<h1>User Update</h1>
<div>
    <div class="row">
        <form asp-controller="User" asp-action="Update" enctype="multipart/form-data">
            <div class="col-12">
                <input hidden asp-for="Id">
                <div class="form-group">
                    <label asp-for="@Model.UserName" class="col-form-label"></label>
                    <input asp-for="@Model.UserName" class="form-control" />
                </div>
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-controller="User" asp-action="Index" class="btn btn-light">Back To List</a>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
